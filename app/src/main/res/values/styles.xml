<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tileStyle">
        <item name="android:layout_height">@dimen/tileSize</item>
        <item name="android:layout_width">@dimen/tileSize</item>
        <item name="android:background">@drawable/tileimage</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:padding">@dimen/tilePadding</item>
        <item name="android:layout_margin">@dimen/tileMargin</item>
    </style>

</resources>
